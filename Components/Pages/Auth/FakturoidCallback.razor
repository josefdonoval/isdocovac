@page "/auth/fakturoid-callback"
@rendermode InteractiveServer
@attribute [Authorize]
@using System.Security.Claims
@using Isdocovac.Services.Fakturoid
@using Isdocovac.Providers
@using Isdocovac.Utils
@inject IFakturoidOAuthService OAuthService
@inject IFakturoidApiService ApiService
@inject IFakturoidConnectionProvider ConnectionProvider
@inject IFakturoidOAuthStateProvider OAuthStateProvider
@inject NavigationManager NavigationManager
@inject IConfiguration Configuration

<PageTitle>Connecting to Fakturoid...</PageTitle>

<div class="container" style="max-width: 500px; margin-top: 100px;">
    <div class="card">
        <div class="card-body text-center">
            @if (isProcessing)
            {
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Processing...</span>
                </div>
                <p>Connecting to Fakturoid...</p>
            }
            else if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="text-danger mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                </div>
                <h4 class="text-danger">Connection Failed</h4>
                <p class="text-muted">@errorMessage</p>
                <a href="/auth/fakturoid-import" class="btn btn-primary mt-3">Try Again</a>
            }
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery(Name = "code")]
    private string? code { get; set; }

    [SupplyParameterFromQuery(Name = "state")]
    private string? state { get; set; }

    [SupplyParameterFromQuery(Name = "error")]
    private string? error { get; set; }

    [CascadingParameter]
    private Task<AuthenticationState>? authenticationStateTask { get; set; }

    private bool isProcessing = true;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await ProcessCallback();
    }

    private async Task ProcessCallback()
    {
        if (!string.IsNullOrEmpty(error))
        {
            errorMessage = "Authorization was denied or cancelled.";
            isProcessing = false;
            return;
        }

        if (string.IsNullOrEmpty(code))
        {
            errorMessage = "Invalid authorization code.";
            isProcessing = false;
            return;
        }

        try
        {
            // Get current user
            var authState = await authenticationStateTask!;
            var userIdClaim = authState.User.FindFirst(ClaimTypes.NameIdentifier);
            if (userIdClaim == null)
            {
                errorMessage = "User not authenticated.";
                isProcessing = false;
                return;
            }

            var userId = Guid.Parse(userIdClaim.Value);
            if (string.IsNullOrEmpty(state))
            {
                errorMessage = "Missing OAuth state.";
                isProcessing = false;
                return;
            }

            var stateHash = TokenHasher.HashToken(state);
            var isStateValid = await OAuthStateProvider.ValidateAndConsumeAsync(userId, stateHash);
            if (!isStateValid)
            {
                errorMessage = "Invalid OAuth state.";
                isProcessing = false;
                return;
            }

            // Exchange code for tokens
            var redirectUri = Configuration["Fakturoid:RedirectUri"];
            var (accessToken, refreshToken, expiresIn) = await OAuthService.ExchangeCodeForTokenAsync(code, redirectUri!);

            // Get account slug
            var accountSlug = await ApiService.GetAccountSlugAsync(accessToken);

            // Calculate expiration
            var expiresAt = DateTime.UtcNow.AddSeconds(expiresIn);

            // Store connection
            await ConnectionProvider.CreateAsync(userId, accessToken, refreshToken, expiresAt, accountSlug);

            // Redirect to import page
            NavigationManager.NavigateTo("/auth/fakturoid-import");
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
            isProcessing = false;
        }
    }
}
