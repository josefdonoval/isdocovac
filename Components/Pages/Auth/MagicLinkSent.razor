@page "/auth/magic-link-sent"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager

<PageTitle>Check Your Email - Isdocovac</PageTitle>

<div class="container" style="max-width: 500px; margin-top: 100px;">
    <div class="card">
        <div class="card-body text-center">
            <div class="mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-envelope-check text-success" viewBox="0 0 16 16">
                    <path d="M2 2a2 2 0 0 0-2 2v8.01A2 2 0 0 0 2 14h5.5a.5.5 0 0 0 0-1H2a1 1 0 0 1-.966-.741l5.64-3.471L8 9.583l7-4.2V8.5a.5.5 0 0 0 1 0V4a2 2 0 0 0-2-2H2Zm3.708 6.208L1 11.105V5.383l4.708 2.825ZM1 4.217V4a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v.217l-7 4.2-7-4.2Z"/>
                    <path d="M16 12.5a3.5 3.5 0 1 1-7 0 3.5 3.5 0 0 1 7 0Zm-1.993-1.679a.5.5 0 0 0-.686.172l-1.17 1.95-.547-.547a.5.5 0 0 0-.708.708l.774.773a.75.75 0 0 0 1.174-.144l1.335-2.226a.5.5 0 0 0-.172-.686Z"/>
                </svg>
            </div>

            <h3 class="card-title mb-3">Check Your Email</h3>

            @if (!string.IsNullOrEmpty(email))
            {
                <p class="text-muted">
                    We've sent a magic link to <strong>@email</strong>
                </p>
            }
            else
            {
                <p class="text-muted">
                    We've sent you a magic link!
                </p>
            }

            <p class="mt-4">
                Click the link in your email to securely log in to your account.
                The link will expire in 15 minutes.
            </p>

            <div class="alert alert-info mt-4" role="alert">
                <small>
                    <strong>Didn't receive the email?</strong><br/>
                    Check your spam folder or <a href="/auth/login">request a new link</a>.
                </small>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery(Name = "email")]
    private string? email { get; set; }
}
